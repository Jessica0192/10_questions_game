<Page
    x:Class="A4.AnswersWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:A4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="AliceBlue">
        <TextBlock Text="Answers" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBlock x:ConnectionId='2' Name="txtAnswers" Margin="250,100,250,100" ScrollViewer.VerticalScrollBarVisibility="Visible"/>
        <Button x:ConnectionId='3' x:Name="nextBtn" Content="Ok" Width="130" Height="40" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,100,50"                      />
    </Grid>
</Page>

