<Page
    x:Class="A4.Questions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:A4"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Background="LightCoral">
        <TextBlock x:ConnectionId='2' Text="{Binding Question}" Name="txtQuestion" FontSize="30" HorizontalAlignment="Center" Margin="50"/>
        <TextBlock x:ConnectionId='3' Name="timeTxtBlock" Text ="00:00" FontSize="40" Foreground="Black" FontWeight="Bold" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="10" Visibility="Visible"/>
        <RadioButton x:ConnectionId='4' Margin="170,120,0,0" GroupName="rbGroup" FontSize="25" Name="choice1" Tag="1"                          />
        <RadioButton x:ConnectionId='5' Margin="170,40,0,0" GroupName="rbGroup" FontSize="25" Name="choice2" Tag="2"                          />
        <RadioButton x:ConnectionId='6' Margin="170,40,0,0" GroupName="rbGroup" FontSize="25" Name="choice3" Tag="3"                          />
        <RadioButton x:ConnectionId='7' Margin="170,40,0,0" GroupName="rbGroup" FontSize="25" Name="choice4" Tag="4"                          />
        <!--<Button x:Name="nextBtn" Content="Next" Width="120" Height="40" CornerRadius="5" HorizontalAlignment="Right" Margin="0,130,250,0" Click="nextBtn_Click"/>-->
    </StackPanel>
</Page>

